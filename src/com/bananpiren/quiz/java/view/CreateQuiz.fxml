<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxWidth="-Infinity" prefWidth="648.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bananpiren.quiz.java.controller.CreateQuizController">
   <center>
      <VBox prefWidth="648.0" spacing="10.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Separator prefWidth="200.0" />
            <Label text="Skriv in namn på Quizet">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <TextField fx:id="textFieldQuizName" promptText="namn" />
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0">
               <children>
                  <CheckBox fx:id="timeLimitCheckBox" mnemonicParsing="false" text="Tidsbegränsning" />
                  <CheckBox disable="true" mnemonicParsing="false" text="Självrättande" />
               </children>
            </HBox>
            <GridPane fx:id="timeLimitGridPane" maxHeight="0.0" minHeight="0.0" prefHeight="0.0" visible="false">
               <children>
                  <Label text="Välj tidsgräns">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
                  <Slider fx:id="sliderTime" showTickLabels="true" showTickMarks="true" GridPane.rowIndex="1" />
                  <Label fx:id="labelMinutes" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Vald tid:" GridPane.columnIndex="1">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
            <GridPane>
               <children>
                  <Label text="Välj slutdatum" GridPane.columnIndex="1">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePickerEndDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Välj startdatum">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePickerStartDate" GridPane.rowIndex="1" />
               </children>
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
            <Separator prefWidth="200.0" />
            <HBox alignment="TOP_CENTER" prefHeight="30.0" spacing="10.0">
               <children>
                  <Button fx:id="buttonAddMultipleAnswerQuestion" mnemonicParsing="false" text="Lägg till Multisvars Fråga" />
                  <Button fx:id="buttonAddSingleAnswerQuestion" mnemonicParsing="false" text="Lägg till singelsvars fråga" />
               </children>
            </HBox>
            <VBox fx:id="vboxAddQuestions" />
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="buttonCreateQuiz" alignment="CENTER" mnemonicParsing="false" prefHeight="60.0" prefWidth="150.0" text="Skapa Quiz" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Label text="Skapa Quiz" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
   </top>
</BorderPane>
